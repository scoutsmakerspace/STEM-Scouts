---
layout: null
permalink: /admin/badges_master.json
---
[
{%- for b in site.badges -%}
  {
    "id": {{ b.id | jsonify }},
    "badge_name": {{ b.badge_name | default: b.title | jsonify }},
    "section": {{ b.section | default: "" | jsonify }},
    "category": {{ b.category | default: "" | jsonify }},
    "icon_url": {%- if b.icon and b.icon != "" -%}{{ b.icon | relative_url | jsonify }}{%- else -%}{{ "/assets/images/badges/" | append: b.id | append: ".png" | relative_url | jsonify }}{%- endif -%},
    "source_path": {{ b.path | jsonify }}
  }{%- unless forloop.last -%},{%- endunless -%}
{%- endfor -%}
]
