---
layout: null
permalink: /assets/data/stem_badge_map_index.json
---
{
  "badges": [
    {% assign _badges = site.data.stem_badge_map.badges | default: empty %}
    {% for b in _badges %}
    {
      "badge_id": {{ b.badge_id | jsonify }},
      "req_refs": [
        {% assign _reqs = b.stem_requirements | default: empty %}
        {% for r in _reqs %}{{ r.ref | jsonify }}{% unless forloop.last %},{% endunless %}{% endfor %}
      ]
    }{% unless forloop.last %},{% endunless %}
    {% endfor %}
  ]
}
